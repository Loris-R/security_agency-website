  body {
    background-color: #FCFCF8;
    width: 750px;
    margin: 0 auto;
    font-family: "Eina01-Regular";
  }

  #contact-mail-body {
    background-color: #B48482;
    color: white;
    padding: 24px 0 24px 16px;
  }

  #contact-mail-body h2 {
    text-decoration: underline;
  }
</style>

<div id="contact-mail-body">
  <h2>Nouveau message de <%= @user_full_name %></h2>
  <h3><%= "Ceci est une candidature spontanée" if @contact_form.is_application == true %></h3>

  <h3>Coordonnées :</h3>
  <ul>
    <li><strong>Nom :</strong> <%= @user_full_name %></li>
    <li><strong>Email :</strong> <%= @contact_form.email %></li>
    <li><strong>Téléphone :</strong> <%= @contact_form.phone_number %></li>
  </ul>
  <h3>Message :</h3>
  <p><%= simple_format(@contact_form.message) %></p>
</div>
