<div>
  <h1>Nouveau formulaire de contact</h1>
  <h3><%= "Ceci est une candidature spontanée" if params[:contact_form][:is_application] == true %></h3>

  <h3>Envoyé par : <%= @user_full_name %></h3>
  <h3>Coordonnées :</h3>
  <ul>
    <li>Email : <%= params[:contact_form][:email] %></li>
    <li>Téléphone : <%= params[:contact_form][:phone_number] %></li>
  </ul>
  <h3>Message :</h3>
  <p><%= params[:contact_form][:message] %></p>
</div>

